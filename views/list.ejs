<script>
  for (let i = 0; i < '<%= posts.length%>'; i++) {

    document.querySelectorAll('.delete')[i]
      .addEventListener('click', function (e) {
        fetch('/delete?docid=' + e.target.dataset.id, {
          method: 'DELETE',
        })
          .then((r) => r.text())
          .then((r) => {
            e.target.parentElement.style.display = 'none'
          })
      })
